/var/log/syslog
{
  rotate 10
  daily
  missingok
  compress
  notifempty
}

/var/log/dpkg.log
{
  rotate 7
  daily
  missingok
  compress
  notifempty
}

/var/log/auth.log
{
  rotate 4
  weekly
  missingok
  compress
  notifempty
}

/var/log/kern.log
/var/log/dmesg
{
  rotate 0
  weekly
}

/var/log/apt/term.log
/var/log/apt/history.log
{
  rotate 12
  monthly
  compress
  missingok
  notifempty
}
